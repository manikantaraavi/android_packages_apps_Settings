<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="network_and_internet_screen"
    android:title="@string/network_dashboard_title">

    <PreferenceCategory
        android:key="multi_network_header"
        android:layout="@layout/preference_category_no_label"
        android:order="-40"
        android:title="@string/summary_placeholder"
        settings:allowDividerBelow="true"
        settings:controller="com.android.settings.network.MultiNetworkHeaderController" />

    <com.android.settings.widget.PrimarySwitchPreference
        android:fragment="com.android.settings.wifi.WifiSettings"
        android:icon="@drawable/ic_settings_wireless"
        android:key="main_toggle_wifi"
        android:order="-30"
        android:summary="@string/summary_placeholder"
        android:title="@string/wifi_settings"
        settings:allowDividerAbove="true">

        <intent
            android:action="android.settings.WIFI_SETTINGS"
            android:targetClass="Settings$WifiSettingsActivity" />

    </com.android.settings.widget.PrimarySwitchPreference>

    <com.android.settings.widget.AddPreference
        android:icon="@drawable/ic_network_cell"
        android:key="mobile_network_list"
        android:order="-15"
        android:summary="@string/summary_placeholder"
        android:title="@string/network_settings_title"
        settings:keywords="@string/keywords_more_mobile_networks"
        settings:useAdminDisabledSummary="true"
        settings:userRestriction="no_config_mobile_networks" />

    <com.android.settingslib.RestrictedSwitchPreference
        android:disableDependentsState="true"
        android:icon="@drawable/ic_airplanemode_active"
        android:key="airplane_mode"
        android:order="-5"
        android:title="@string/airplane_mode"
        settings:controller="com.android.settings.network.AirplaneModePreferenceController"
        settings:userRestriction="no_airplane_mode" />

    <com.android.settingslib.RestrictedPreference
        android:key="manage_mobile_plan"
        android:order="19"
        android:persistent="false"
        android:title="@string/manage_mobile_plan_title"
        settings:useAdminDisabledSummary="true"
        settings:userRestriction="no_config_mobile_networks" />

    <com.android.settingslib.RestrictedPreference
        android:fragment="com.android.settings.TetherSettings"
        android:icon="@drawable/ic_wifi_tethering"
        android:key="tether_settings"
        android:order="5"
        android:summary="@string/summary_placeholder"
        android:title="@string/tether_settings_title_all"
        settings:keywords="@string/keywords_hotspot_tethering"
        settings:useAdminDisabledSummary="true"
        settings:userRestriction="no_config_tethering" />

    <com.android.settings.widget.PrimarySwitchPreference
        android:fragment="com.android.settings.AllInOneTetherSettings"
        android:icon="@drawable/ic_wifi_tethering"
        android:key="all_tether_settings"
        android:order="6"
        android:summary="@string/summary_placeholder"
        android:title="@string/tether_settings_title_all"
        settings:controller="com.android.settings.network.AllInOneTetherPreferenceController"
        settings:keywords="@string/keywords_hotspot_tethering"
        settings:useAdminDisabledSummary="true"
        settings:userRestriction="no_config_tethering" />

    <com.android.settings.datausage.DataSaverPreference
        android:fragment="com.android.settings.datausage.DataSaverSummary"
        android:icon="@drawable/ic_settings_data_usage"
        android:key="restrict_background_parent_entry"
        android:order="10"
        android:title="@string/data_saver_title" />

    <com.android.settingslib.RestrictedPreference
        android:fragment="com.android.settings.vpn2.VpnSettings"
        android:icon="@drawable/ic_vpn_key"
        android:key="vpn_settings"
        android:order="15"
        android:summary="@string/summary_placeholder"
        android:title="@string/vpn_settings_title"
        settings:useAdminDisabledSummary="true"
        settings:userRestriction="no_config_vpn" />

    <com.android.settings.network.PrivateDnsModeDialogPreference
        android:dialogLayout="@layout/private_dns_mode_dialog"
        android:dialogTitle="@string/select_private_dns_configuration_dialog_title"
        android:key="private_dns_settings"
        android:negativeButtonText="@android:string/cancel"
        android:order="20"
        android:positiveButtonText="@string/save"
        android:title="@string/select_private_dns_configuration_title" />

     <org.proton.support.preference.SystemSettingSwitchPreference
         android:key="use_old_mobiletype"
         android:title="@string/use_old_mobiletype_title"
         android:summary="@string/use_old_mobiletype_summary"
         android:defaultValue="true" />            

     <org.proton.support.preference.SystemSettingSwitchPreference
         android:key="show_fourg_icon"
         android:title="@string/show_fourg_icon_title"
         android:summary="@string/show_fourg_icon_summary"
         android:defaultValue="false"/>

    <!-- Network traffic -->
    <PreferenceCategory
        android:title="@string/network_traffic_category_title">

        <org.proton.support.preference.SystemSettingSwitchPreference
            android:key="network_traffic_enabled"
            android:title="@string/statusbar_show_network_traffic_title"
            android:defaultValue="0" />

        <org.proton.support.preference.SystemSettingSeekBarPreference
            android:key="network_traffic_auto_hide_threshold_tx"
            android:title="@string/statusbar_network_traffic_threshold_tx_title"
            android:dependency="network_traffic_enabled"
            android:defaultValue="0"
            android:max="1024"
            settings:min="0"
            settings:interval="128" />

        <org.proton.support.preference.SystemSettingSeekBarPreference
            android:key="network_traffic_auto_hide_threshold_rx"
            android:title="@string/statusbar_network_traffic_threshold_rx_title"
            android:dependency="network_traffic_enabled"
            android:defaultValue="0"
            android:max="1024"
            settings:min="0"
            settings:interval="128" />

        <org.proton.support.preference.SystemSettingSeekBarPreference
            android:key="network_traffic_unit_text_size"
            android:title="@string/statusbar_network_traffic_unit_text_size_title"
            android:dependency="network_traffic_enabled"
            android:defaultValue="21"
            android:max="25"
            settings:min="15" />

        <org.proton.support.preference.SystemSettingSeekBarPreference
            android:key="network_traffic_rate_text_scale_factor"
            android:title="@string/statusbar_network_traffic_rate_text_scale_factor_title"
            android:dependency="network_traffic_enabled"
            android:defaultValue="15"
            android:max="20"
            settings:min="10" />
    </PreferenceCategory>

    <Preference
        android:fragment="com.android.settings.network.AdaptiveConnectivitySettings"
        android:key="adaptive_connectivity"
        android:order="25"
        android:summary="@string/summary_placeholder"
        android:title="@string/adaptive_connectivity_title"
        settings:controller="com.android.settings.network.AdaptiveConnectivityPreferenceController" />

</PreferenceScreen>
